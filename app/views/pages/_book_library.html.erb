<section id="book_library" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><%= t :book_library %></h2>
        <h3 class="section-subheading text-muted"><%= t :most_book %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-6 book_library-item">
        <% @books.each do |book| %>
          <%= link_to image_tag("background.jpg", class: "img-responsive"), root_path,
            class: "book_library-link" %>
          <div class="book_library-caption">
            <h4><%= book.title %></h4>
            <p class="text-muted"><%= book.author %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
