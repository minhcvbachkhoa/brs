$('#nht-review-id').html('<%= j render @reviews %>')
$('.nht-review-rate i').removeClass('nht-star');
$('.nht-review-rate i nht-star-0').addClass('nht-star')
$('.ckeditor').val('')
for ( instance in CKEDITOR.instances ){
  CKEDITOR.instances[instance].updateElement();
  CKEDITOR.instances[instance].setData('');
}
var top_review = $('#review-<%= @review.id %>').position().top;
$('html, body').stop().animate({scrollTop: top_review - 80}, 500);
